<div class="container">
  <h1 class="is-size-2">Saved Articles:</h1>
  {{#each articles}}
  <div class="tile is-ancestor">
    <div class="tile is-vertical is-12">
      <div class="tile">
        <div class="tile is-parent is-vertical articles">
          <div class="tile is-child box">
            <div class="hero is-success is-bold is-small">
              <div class="hero-body">
                <div class="columns">
                  <div class="column is-9">
                    <h3 class="title is-size-4"><a class="header_font" href="{{link}}">{{title}}</a>
                    </h3>
                  </div>
                  <div class="column is-3">
                    <div class="field is-grouped">
                      <p class="control">
                        <button data-articleId="{{_id}}"
                          class="button is-info is-rounded is-medium remove_article">Remove</button>
                      </p>
                      <p class="control">
                        <button data-articleId="{{_id}}"
                          class="button is-info is-light is-rounded is-medium save_note">Save
                          Note</button>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <p class="subtitle is-size-5 article_info"><a class="info_font" href="{{link}}">{{info}}</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{!-- Notes Modal --}}
<div class="modal new_note_modal" data-articleId="">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <button class="delete" id="cancel_note" aria-label="close"></button>
    </header>
    <div class="tile is-ancestor box">
        <div class="tile is-parent is-vertical">
          <div class="notearea"></div>
            <div class="field">
              <p>Note for:</p>
              <textarea class="textarea is-info" type="text" id="user_note" rows="3" placeholder="Enter your note.."></textarea>
            </div>
            <div>
              <button class="button is-info is-rounded is-medium is-pulled-right save">Save</button>
            </div>
        </div>
    </div>
  </div>
</div>